<h1>Hamburger Shop</h1>
<h2>Hamburgers:</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burger_name}}
    <button class="change-devoured" data-id="{{id}}" data-iniDevoured="true">
      EAT
    </button>
  </li>
  {{/unless}}
  {{/each}}
</ul>
<br>
<div>
  <h2>Hamburgers devoured:</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
      {{burger_name}}
      <button class="change-devoured" data-id="{{id}}" data-iniDevoured="false">
        Reset
      </button>
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>
<h2>Add a Burger to the menu</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca" class="burger-class">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Add Hamburger</button>
</form>