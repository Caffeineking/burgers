<h1>Hamburger</h1>

<h2>Hamburgers I want to eat</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{burger_name}}

    <button class="change-devoured" data-id="{{id}}" data-iniDevoured="true">
      EAT
    </button>
  </li>
  {{/unless}}
  {{/each}}
</ul>
<br>
<div>
  <h2>Hamburgers you ate</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
      {{burger_name}}

      <button class="change-devoured" data-id="{{id}}" data-iniDevoured="false">
        Another
      </button>
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Add Hamburger</button>
</form>